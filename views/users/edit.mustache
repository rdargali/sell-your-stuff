<!DOCTYPE html>
<html lang="en">

<head>
 {{> header}}
    
</head>

<body>
<h1>Edit Product</h1>


<div class="container">
{{> menu}}

<br />

<form action="/users/upload/edit/{{id}}" method="POST" enctype="multipart/form-data">

    <label>Photo</label>
    <input type="file" name="photo" />
    <button type="submit">Upload</button>

</form>

<img src="/uploads/{{imageURL}}" class="product-preview-image"/>

<form action="/users/update-product" method="POST">
    <input type="hidden" name="productId" value={{id}} />
    <div class="form-group">
        <label>Title</label>
        <input type="text" name="title" value="{{title}}" class="form-control" placeholder="Enter title">
    </div>

    <div class="form-group">
        <label>Description</label>
        <textarea name="description" class="form-control" placeholder="Enter description">{{description}}</textarea>
    </div>
    <div class="form-group">
        <label>Price</label><br />
        <input type="text" name="price" value="{{price}}" placeholder="Enter price">
    </div>

    <button type="submit" class="btn btn-primary">Update Product</button>


</form>



{{#message}}
  <div class="alert alert-danger" role="alert">
  {{message}}
  </div>
{{/message}}


</div>



{{> footer}}
</body>

</html>